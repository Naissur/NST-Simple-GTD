<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="SimpleGTD.AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="SimpleGTD.AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/SimpleGTD.ActionBar</item>
    </style>


    <!-- ActionBar styles -->
    <style name="SimpleGTD.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/simplegtd_actionbar_background</item>
        <item name="android:height">@dimen/SimpleGTD.ActionBar.height</item>
        <item name="android:titleTextStyle">@style/SimpleGTD.ActionBar.text_style</item>
        <item name="android:textAppearance">@style/SimpleGTD.ActionBar.text_style</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!--  ActionBar text style -->
    <style name="SimpleGTD.ActionBar.text_style" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/SimpleGTD.ActionBar.text_color</item>
        <item name="android:textSize">@dimen/SimpleGTD.ActionBar.text_size</item>
    </style>
    

    <!--  ToDo text appearance -->
    <style name="SimpleGTD.Todo.text_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/SimpleGTD.Todo.text_color</item>
        <item name="android:textSize">@dimen/SimpleGTD.Todo.text_size</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!-- Dialogs theme -->
    <style name="SimpleGTD.DialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowTitleStyle">@style/SimpleGTD.ActionBar</item>
    </style>
    
    <style name="SimpleGTD.DialogTitle" parent="@android:style/Widget.ActionBar">
        <item name="android:textAppearance">@style/SimpleGTD.ActionBar.text_style</item>
        <item name="android:background">@drawable/simplegtd_actionbar_background</item>
    </style>
        
    
    <!--  Done Task style -->
    <style name="SimpleGTD.TaskDone.style" parent="@android:style/Widget.TextView">
        <!-- <item name="android:width">@dimen/SimpleGTD.TaskDone.width</item>
        <item name="android:height">@dimen/SimpleGTD.TaskDone.height</item>  -->
        <!-- <item name="android:gravity">center</item>  -->
        <item name="android:background">@drawable/simplegtd_task_done_background</item>
        <item name="android:textAppearance">@style/SimpleGTD.TaskDone.text_appearance</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/SimpleGTD.TaskDone.padding_left</item>
        <item name="android:paddingTop">@dimen/SimpleGTD.TaskDone.padding_top</item>
        <item name="android:paddingBottom">@dimen/SimpleGTD.TaskDone.padding_bottom</item>
    </style>

    <!--  Done Task text appearance -->
    <style name="SimpleGTD.TaskDone.text_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/SimpleGTD.TaskDone.text_color</item>
        <item name="android:textSize">@dimen/SimpleGTD.TaskDone.text_size</item>
    </style>

    <!--  Add Task Dialog Button style -->
    <style name="SimpleGTD.AddTaskDialog.button_style" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/SimpleGTD.Button.text_color</item>
        <item name="android:textSize">@dimen/SimpleGTD.Button.text_size</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item> 
    </style>
</resources>
